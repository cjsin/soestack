[log]
filters = ldap:debug

[paths]
data = {{config.data_path}}

[server]
protocol = http
http_addr = 0.0.0.0
http_port = {{config.port}}
domain = {{grains.host}}
enforce_domain = false
root_url = http://{{config.hostname}}:{{config.port}}

[database]
log_queries = false

[analytics]
reporting_enabled = false
check_for_updates = false

[security]
admin_user = admin
admin_password = adminadmin
disable_gravatar = true

[users]
allow_sign_up = true

[auth.anonymous]
enabled = false
org_role = Viewer

[auth.basic]
enabled = false

[auth.ldap]
enabled = true
config_file = /etc/grafana/ldap.toml
allow_sign_up = true

[smtp]
enabled = false

[emails]
welcome_email_on_sign_up = false

[alerting]
enabled = true

[explore]
enabled = true

[metrics]
enabled           = true

[grafana_com]
url = {{config.grafana_url}}

