[os]
name=Fedora-$releasever
baseurl=http://nexus:7081/repository/fedora/pub/fedora/linux/releases/$releasever/Everything/$basearch/os
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg//RPM-GPG-KEY-fedora-28-x86_64

[updates]
name=Fedora-$releasever - Updates
baseurl=http://nexus:7081/repository/fedora/pub/fedora/linux/updates/$releasever/Everything/$basearch
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-28-x86_64

[rpmfusion-free]
name=RPMFusion free
baseurl=http://nexus:7081/repository/rpmfusion/free/fedora/releases/$releasever/Everything/$basearch/os
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-rpmfusion-free-fedora-28

[rpmfusion-free-updates]
name=RPMFusion free updates
baseurl=http://nexus:7081/repository/rpmfusion/free/fedora/updates/$releasever/$basearch
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-rpmfusion-free-fedora-28

[rpmfusion-nonfree]
