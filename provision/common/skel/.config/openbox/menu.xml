<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="applications-menu" label="Applications" execute="/usr/libexec/openbox-xdg-menu applications"/>
<menu id="preferences-menu" label="Preferences" execute="/usr/libexec/openbox-xdg-menu preferences"/>
<menu id="administration-menu" label="Administration" execute="/usr/libexec/openbox-xdg-menu system-settings"/>
<menu id="terminals-menu" label="Terminals" execute="/usr/libexec/openbox-xdg-menu /etc/xdg/openbox/terminals"/>

<menu id="root-menu" label="Openbox 3">
  <item label="Terminator" icon="/usr/share/icons/hicolor/22x22/apps/terminator.png">
    <action name="Execute"><command>terminator</command></action>
  </item>
  <item label="Thunar File Manager" icon="/usr/share/icons/hicolor/24x24/apps/Thunar.png">
    <action name="Execute"><command>thunar</command></action>
  </item>
  <item label="Text Editor" icon="/usr/share/icons/hicolor/22x22/apps/gedit.png">
    <action name="Execute"><command>gedit</command></action>
  </item>
  <item label="Visual Studio Code">
    <action name="Execute"><command>/usr/share/code/code --unity-launch</command></action>
  </item>
  <item label="Firefox" icon="/usr/share/icons/hicolor/22x22/apps/firefox.png">
    <action name="Execute"><command>firefox</command></action>
  </item>
  <item label="Thunderbird" icon="/usr/share/icons/hicolor/22x22/apps/thunderbird.png">
    <action name="Execute"><command>thunderbird</command></action>
  </item>

  <!--<separator label="Openbox"/>-->
  <menu id="applications-menu"/>
  <menu id="preferences-menu"/>
  <menu id="administration-menu"/>
  <separator/>
  <menu id="terminals-menu"/>
  <separator/>
  <item label="Reconfigure">
    <action name="Reconfigure" />
  </item>
  <item label="Exit">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
  <separator/>
  <item label="Log Out">
    <action name="SessionLogout">
      <prompt>yes</prompt>
    </action>
  </item>
</menu>

</openbox_menu>
